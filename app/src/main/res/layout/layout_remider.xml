<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main">

    <TextView
        android:id="@+id/title_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_back"
        android:padding="10dp"
        android:text="NHẮC NHỞ"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TimePicker
        android:id="@+id/simpleTimePicker"
        style="@style/TimePickerTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:scaleX="1.25"
        android:scaleY="1.25"
        android:timePickerMode="spinner"
        app:layout_constraintTop_toBottomOf="@+id/title_reminder"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="40dp"
        android:text="LẶP LẠI"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/simpleTimePicker"
        tools:layout_editor_absoluteX="20dp" />

    <LinearLayout
        android:id="@+id/llrepeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnMonday"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_weekdays"
            android:gravity="center"
            android:text="2"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="40dp"
            android:id="@+id/btnTuesDay"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_weekdays"
            android:gravity="center"
            android:text="3"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnWednesday"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_weekdays"
            android:gravity="center"
            android:text="4"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/btnThursday"
            android:background="@drawable/bg_weekdays"
            android:gravity="center"
            android:text="5"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/btnFriday"
            android:background="@drawable/bg_weekdays"
            android:gravity="center"
            android:text="6"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnSaturday"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_weekdays"
            android:gravity="center"
            android:text="7"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="40dp"
            android:id="@+id/btnSunday"
            android:layout_height="40dp"
            android:background="@drawable/bg_weekdays"
            android:gravity="center"
            android:text="CN"
            android:textSize="15dp"
            android:textStyle="italic" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="72dp"
        android:backgroundTint="@color/white"
        android:text="Lưu"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llrepeat" />
</androidx.constraintlayout.widget.ConstraintLayout>